{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/sample/page.jsx", "src/app/transcribe/record/page.jsx", "src/app/transcribe/result/page.jsx", "src/apiReq/englishtohindi.js", "src/apiReq/hindiToEnglish.js", "src/apiReq/OCRcorrection.js", "src/apiReq/saveTranscribeData.js"],
  "exclude": ["node_modules"]
}
